<Window x:Class="PolEko.MainWindow"
        xml:lang="pl-PL"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Poleko">
  <Grid HorizontalAlignment="Left" VerticalAlignment="Top">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <Button Background="Bisque" Click="AddDevice_Click" Margin="15, 15">
      Dodaj urządzenie
    </Button>
    <ComboBox Grid.Row="0" Grid.Column="1" Width="150" Height="20" Name="DevicesBox" />
    <Button Grid.Row="0" Grid.Column="2" Height="20" Click="FetchMeasurements_Click">
      Start fetching
    </Button>
    <!-- question for background monitoring perhaps with a hint about performance -->
  </Grid>
</Window>