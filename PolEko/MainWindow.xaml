<Window x:Class="PolEko.MainWindow"
        xml:lang="pl-PL"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Poleko">
  <Grid Name="Grid">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="20"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*" />
      <ColumnDefinition Width="5*" />
    </Grid.ColumnDefinitions>
    
    <GridSplitter Grid.RowSpan="3" Width="3" />
    <TabControl Grid.Row="0" Grid.Column="1" Name="TabControl"></TabControl>
    <StatusBar Grid.Row="1" Grid.Column="0" Name="StatusBar" Grid.ColumnSpan="2" Height="20" Background="#FFABABAB"/>
  </Grid>
</Window>